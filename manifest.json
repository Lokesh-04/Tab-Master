{
  "manifest_version": 2,
  "name": "TabMaster",
  "version": "1.1",
  "description": "Manage your tabs efficiently.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "styles.css"
  ]
}
